<Window x:Class="WpfApp1.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
         Title="Регистрация" MaxWidth="640" MaxHeight="640" MinHeight="640" MinWidth="640"
    >
    <Window.Background>
        <ImageBrush ImageSource="/back.jpg"/>
    </Window.Background>

   
        <Window.Resources>
    <Style TargetType="Button">
        <Setter Property="Background" Value="#FF6C5CE7"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#FF6C5CE7"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="DarkGray"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>
    <Style TargetType="PasswordBox">
        <Setter Property="Background" Value="DarkGray"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
    </Style>
    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="Crimson"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
    </Style>

        
    </Window.Resources>
    <Grid>
      
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock 
                    Text="Aвторизация" 
                    FontSize="28" 
                    FontWeight="Bold" 
                    Foreground="Black" 
                    
                    Margin="0,0,0,30" 
                    HorizontalAlignment="Center"
                 
                />

            <TextBlock Text="Логин"/>
            <TextBox/>

            

            <TextBlock Text="Пароль"/>
            <PasswordBox/>

          
            <Button Content="Войти" Click="Button_Click"/>
           
        </StackPanel>
    </Grid>
</Window>